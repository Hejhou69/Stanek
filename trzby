<body>
  <h1>üìà P≈ôehled tr≈æeb</h1>
  <div id="sales-container"></div>
  <a href="index.html">‚Üê Zpƒõt na prodej</a>

  <script>
    function renderSales() {
      const container = document.getElementById('sales-container');
      container.innerHTML = '';

      const stored = localStorage.getItem('sales');
      if (!stored) {
        container.innerHTML = '<p>≈Ω√°dn√© tr≈æby zat√≠m nejsou ulo≈æeny.</p>';
        return;
      }

      const sales = JSON.parse(stored);
      const days = Object.keys(sales).sort().reverse(); // Nejnovƒõj≈°√≠ prvn√≠

      if (days.length === 0) {
        container.innerHTML = '<p>≈Ω√°dn√© tr≈æby zat√≠m nejsou ulo≈æeny.</p>';
        return;
      }

      days.forEach(day => {
        const dayDiv = document.createElement('div');
        dayDiv.className = 'day';

        const amounts = sales[day];
        const sum = amounts.reduce((a, b) => a + b, 0);

        dayDiv.innerHTML = `
          <h3>${day}</h3>
          <ul>
            ${amounts.map(a => `<li>${a} Kƒç</li>`).join('')}
          </ul>
          <div class="total">Souƒçet: ${sum} Kƒç</div>
          <button onclick="deleteDay('${day}')">üóëÔ∏è Smazat den</button>
        `;

        container.appendChild(dayDiv);
      });
    }

    function deleteDay(day) {
      if (!confirm(`Opravdu chce≈° smazat tr≈æby za ${day}?`)) return;
      const stored = localStorage.getItem('sales');
      if (!stored) return;
      const sales = JSON.parse(stored);
      delete sales[day];
      localStorage.setItem('sales', JSON.stringify(sales));
      renderSales();
    }

    renderSales();
  </script>
</body>
