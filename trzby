<body>
  <h1>St√°nek - Tr≈æby</h1>

  <div id="sales"></div>

  <a href="index.html">üè† Zpƒõt na prodej</a>

  <script>
    function loadSales() {
      const sales = localStorage.getItem('sales');
      return sales ? JSON.parse(sales) : {};
    }

    function renderSales() {
      const salesDiv = document.getElementById('sales');
      salesDiv.innerHTML = ''; // Clear previous content
      const sales = loadSales();

      if (Object.keys(sales).length === 0) {
        salesDiv.innerHTML = '<p>≈Ω√°dn√© tr≈æby nejsou ulo≈æeny.</p>';
      } else {
        Object.keys(sales).forEach(date => {
          const div = document.createElement('div');
          div.className = 'sale';
          div.innerHTML = `
            <div class="date">${date}</div>
            <div class="amount">${sales[date].reduce((sum, sale) => sum + sale, 0)} Kƒç</div>
          `;
          salesDiv.appendChild(div);
        });
      }
    }

    renderSales();
  </script>
