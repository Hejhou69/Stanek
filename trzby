  <h1>üìä P≈ôehled tr≈æeb</h1>
  <div id="sales-container"></div>

  <a href="index.html">‚¨ÖÔ∏è Zpƒõt na prodej</a>

  <script>
    function loadSales() {
      const raw = localStorage.getItem('sales');
      return raw ? JSON.parse(raw) : {};
    }

    function renderSales() {
      const container = document.getElementById('sales-container');
      const sales = loadSales();
      container.innerHTML = '';

      if (Object.keys(sales).length === 0) {
        container.innerHTML = '<p>≈Ω√°dn√© tr≈æby nejsou k dispozici.</p>';
        return;
      }

      Object.entries(sales).forEach(([date, list]) => {
        const div = document.createElement('div');
        div.className = 'date-block';
        const sum = list.reduce((a, b) => a + b, 0);
        div.innerHTML = `
          <h2>${date}</h2>
          <p>Poƒçet prodej≈Ø: ${list.length}</p>
          <p class="total">Celkem: ${sum} Kƒç</p>
        `;
        container.appendChild(div);
      });
    }

    renderSales();
  </script>
